class Solution {
    public void answer(int[] nums, List<List<Integer>> ans, List<Integer> curr, boolean[] used) {
        if (curr.size() == nums.length) {
            ans.add(new ArrayList<>(curr));
            return;
        }

        for (int i = 0; i < nums.length; i++) {
            if (used[i]) continue;   

            curr.add(nums[i]);
            used[i] = true;

            answer(nums, ans, curr, used);

        
            curr.remove(curr.size() - 1);
            used[i] = false;
        }
    }

    public List<List<Integer>> permute(int[] nums) {
        List<List<Integer>> ans = new ArrayList<>();
        boolean[] used = new boolean[nums.length];
        answer(nums, ans, new ArrayList<>(), used);
        return ans;
    }
}
