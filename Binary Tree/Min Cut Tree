import java.util.*;
import java.io.*;

class Solution {
    int minHeight(int[] height, int n, int k) {
        int low = 0;
        int high = 0;
        for (int h : height)
            high = Math.max(high, h);

        int ans = high;

        while (low <= high) {
            int mid = low + (high - low) / 2;
            long wood = 0;

            for (int h : height) {
                if (h > mid) wood += (h - mid);
            }

            if (wood >= k) {
                // We can collect enough or more wood â†’ try smaller X
                ans = mid;
                low = mid + 1; // we want MINIMUM X that still gives at most K wood
            } else {
                high = mid - 1;
            }
        }
        return ans;
    }
}

public class Main {
    public static void main(String args[]) {
        Scanner input = new Scanner(System.in);
        int n = input.nextInt();
        int k = input.nextInt();
        int a[] = new int[n];
        for (int i = 0; i < n; i++) {
            a[i] = input.nextInt();
        }
        Solution Obj = new Solution();
        int ans = Obj.minHeight(a, n, k);
        System.out.println(ans);
    }
}
